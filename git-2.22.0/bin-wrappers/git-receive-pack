#!/bin/sh

# wrap-for-bin.sh: Template for git executable wrapper scripts
# to run test suite against sandbox, but with only bindir-installed
# executables in PATH.  The Makefile copies this into various
# files in bin-wrappers, substituting
# /ssd/Projects/sparkz/git-2.22.0 and git-receive-pack.

GIT_EXEC_PATH='/ssd/Projects/sparkz/git-2.22.0'
if test -n "$NO_SET_GIT_TEMPLATE_DIR"
then
	unset GIT_TEMPLATE_DIR
else
	GIT_TEMPLATE_DIR='/ssd/Projects/sparkz/git-2.22.0/templates/blt'
	export GIT_TEMPLATE_DIR
fi
GITPERLLIB='/ssd/Projects/sparkz/git-2.22.0/perl/build/lib'"${GITPERLLIB:+:$GITPERLLIB}"
GIT_TEXTDOMAINDIR='/ssd/Projects/sparkz/git-2.22.0/po/build/locale'
PATH='/ssd/Projects/sparkz/git-2.22.0/bin-wrappers:'"$PATH"

export GIT_EXEC_PATH GITPERLLIB PATH GIT_TEXTDOMAINDIR

case "$GIT_DEBUGGER" in
'')
	exec "${GIT_EXEC_PATH}/git-receive-pack" "$@"
	;;
1)
	unset GIT_DEBUGGER
	exec gdb --args "${GIT_EXEC_PATH}/git-receive-pack" "$@"
	;;
*)
	GIT_DEBUGGER_ARGS="$GIT_DEBUGGER"
	unset GIT_DEBUGGER
	exec ${GIT_DEBUGGER_ARGS} "${GIT_EXEC_PATH}/git-receive-pack" "$@"
	;;
esac
